# Thrive Church API - Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git - it's in .gitignore

# MongoDB Configuration
MONGO_CONNECTION_STRING='mongodb+srv://username:password@cluster.mongodb.net/?appName=YourApp'
HANGFIRE_CONNECTION_STRING='mongodb://localhost:27017/Hangfire_thrive?authSource=admin'

# ESV API Configuration
ESV_API_KEY='your_esv_api_key_here'

# Email Configuration
EMAIL_PASSWORD='your_email_password_here'

# AWS S3 Configuration
S3_BUCKET_NAME='your-bucket-name'
S3_ACCESS_KEY='YOUR_AWS_ACCESS_KEY'
S3_SECRET_KEY='YOUR_AWS_SECRET_KEY'
S3_REGION='us-east-2'
S3_BASE_URL='https://your-bucket-name.s3.us-east-2.amazonaws.com'

# MUX Configuration
MUX_SECRET='your_mux_secret_here'

# JWT Configuration
JWT_SECRET_KEY='your_jwt_secret_key_at_least_32_characters_long_here'

# Redis Configuration (for production caching)
REDIS_CONNECTION_STRING='your-redis-server:6379,password=your_password'

