{
  // This is a TEMPLATE file showing the structure of appsettings.json
  // DO NOT put real secrets here - use environment variables instead
  // See README for how to configure via environment variables
  
  "LogLevel": {
    "Default": "Debug"
  },
  "AllowedHosts": "*",
  
  // ESV API Configuration
  "EsvApiKey": "YOUR_ESV_API_KEY_HERE",
  "OverrideEsvApiKey": "false",
  
  // MongoDB Configuration
  "MongoConnectionString": "mongodb://localhost:27017/ThriveDB",
  "TokenConnectionStringPath": "Hashables",
  
  // Email Configuration
  "EmailPW": "YOUR_EMAIL_PASSWORD_HERE",
  
  // AWS S3 Configuration
  "S3": {
    "BucketName": "your-bucket-name",
    "AccessKey": "YOUR_AWS_ACCESS_KEY",
    "SecretKey": "YOUR_AWS_SECRET_KEY",
    "Region": "us-east-2",
    "BaseUrl": "https://your-bucket-name.s3.us-east-2.amazonaws.com",
    "MaxFileSizeMB": 50,
    "AllowedExtensions": [ ".mp3" ]
  },
  
  // MUX Configuration
  "MUX": {
    "Secret": "YOUR_MUX_SECRET_HERE"
  },
  
  // JWT Configuration
  "JWT": {
    "SecretKey": "YOUR_JWT_SECRET_KEY_HERE_AT_LEAST_32_CHARACTERS",
    "Issuer": "ThriveChurchOfficialAPI",
    "Audience": "ThriveChurchClients",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },

  // Redis Configuration (for production caching - not needed for development)
  "RedisConnectionString": "your-redis-server:6379,password=your_password",
  
  // Rate Limiting Configuration
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": false,
    "StackBlockedRequests": true,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "IpWhitelist": [],
    "EndpointWhitelist": [],
    "ClientWhitelist": [],
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      },
      {
        "Endpoint": "*",
        "Period": "15m",
        "Limit": 300
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 500
      },
      {
        "Endpoint": "*",
        "Period": "1d",
        "Limit": 1000
      }
    ]
  }
}

